                    <option value="month">This Month</option>
                    <option value="year">This Year</option>
                </select>
            </form>
        </div>
    </div>

    <!-- Enhanced Reports Section -->
    <div class="container">
        <div class="content-section animate-fade-up">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    Active Reports
                </h2>
                <a href="#" class="view-all-btn">View All Reports</a>
            </div>

            <div class="reports-grid">
                <% for (let report of allReport) { %>
                    <a href="/reports/<%= report._id%>" class="report-card">
                        <div class="card-image">
                            <img src="<%=report.image.url || '/images/ocen bg.jpg' %>" alt="Tsunami Warning">
                            <div class="card-overlay"></div>
                            <div class="priority-badge">High Priority</div>
                        </div>
                        <div class="card-body p-3">
                            <h3 class="report-title">
                                <%= report.title %>
                            </h3>
                            <p class="report-description">
                                <%= report.description %>
                            </p>
                            <div class="report-meta">
                                <div class="report-date">
                                    <i class="fas fa-clock"></i>
                                    <%= dayjs(report.date).fromNow() %>
                                </div>
                                <div class="report-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <%= report.state %>
                                </div>
                            </div>
                            <div class="report-actions">
                                <button class="open-btn">View Details</button>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
        </div>
    </div>

