                                <p class="display-7 text-white"><b>Username:</b> demo</p>
                                <p class="display-7 text-white"><b>Password:</b> 1234567890</p>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="profile-demo animate-fade-up">
                        <img src="/images/demovideo.jpg" alt="Demo User">
                        <div class="play-icon">
                            <a href="/video">
                                <i class="fas fa-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-auto">
                    <form method="GET" action="/reports/new">
                        <button type="submit" class="post-report-btn animate-fade-up">
                            <i class="fas fa-exclamation-triangle"></i>
                            Post Emergency Report
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Enhanced Marquee -->
