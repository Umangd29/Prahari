                        <a class="nav-link" href="/map">
                            <i class="fas fa-map-marked-alt"></i> Live Map
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/social">
                            <i class="fas fa-chart-line"></i> Social Trends
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/notification">
                            <i class="fas fa-bell"></i> Notifications
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <a href="/languagechange" class="lang-btn">
                        <img src="/images/language.jpg" alt="Language">
                    </a>
                    
                    <!-- Demo login buttons -->
                    <% if(!currUser){ %>
                        <!-- User is NOT logged in -->
                        <a href="/signup" class="sign-in-btn me-3">SignUp</a>
                        <a href="/login" class="sign-in-btn me-3">Login</a>
                        <% } else { %>
                            <!-- User is logged in -->
                            <a href="/logout" class="sign-in-btn me-3">Logout</a>
                            <a href="/profile">
                                <img src="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><circle cx='50' cy='50' r='40' fill='%23667eea'/><circle cx='50' cy='35' r='15' fill='white'/><path d='M25 75 Q50 60 75 75' stroke='white' stroke-width='8' fill='none'/></svg>"
                                    alt="Profile" class="profile-icon">
                            </a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-8">
                    <div class="hero-content animate-fade-up">
                        <div class="demo-credentials <%= currUser ? 'hidden' : '' %>">
                            <p class="display-7 dashboard-first-para text-white mb-2"><b>Demo
                                    Credentials for Admin Login</b></p>
