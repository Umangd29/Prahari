        </div>
    </div>

    <!-- Enhanced Filter Section -->
    <div class="container">
        <div class="filter-section animate-fade-up">
            <form class="filter-form" action="/search" method="GET">
                <div class="search-group">
                    <input type="text" class="search-input" placeholder="Search reports, locations, hazard types..."
                        name="q">
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>

                <select class="filter-dropdown" name="location">
                    <option value="">üìç All Locations</option>
