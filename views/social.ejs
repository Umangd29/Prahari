<% layout('layouts/boilerplate') %>

    <div class="social-page container-fluid py-4">
        <!-- Filter Section -->
        <div class="social-page-filter-section filter-section">
            <div class="row g-3">
                <div class="col-lg-3 col-6">
                    <label class="form-label">Date Range</label>
                    <select class="form-select" id="filter-date">
                        <option selected value="7">Last 7 Days</option>
                        <option value="30">Last 30 Days</option>
                        <option value="90">Last 90 Days</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="col-lg-3 col-6">
                    <label class="form-label">Platform</label>
                    <select class="form-select" id="filter-platform">
                        <option selected value="all">All Platform</option>
                        <option value="twitter">Twitter</option>
                        <option value="facebook">Facebook</option>
                        <option value="instagram">Instagram</option>
                        <option value="linkedin">LinkedIn</option>
                    </select>
                </div>
                <div class="col-lg-3 col-6">
                    <label class="form-label">Event Type</label>
                    <select class="form-select" id="filter-event">
                        <option selected value="all">All Events</option>
                        <option value="natural">Natural Disasters</option>
                        <option value="weather">Weather Events</option>
                        <option value="social">Social Events</option>
                    </select>
                </div>
                <div class="col-lg-3 col-6">
                    <label class="form-label">Location</label>
                    <select class="form-select" id="filter-location">
                        <option selected value="all">All Regions</option>
                        <option value="odisha">Odisha</option>
                        <option value="gujarat">Gujarat</option>
                        <option value="kerela">Kerela</option>
                        <option value="bihar">Bihar</option>
                        <option value="sikkim">Sikkim</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Dashboard Grid -->
        <div class="row g-4">
            <!-- Sentiment Analysis -->
            <div class="col-lg-3 col-md-6">
                <div class="card social-page-dashboard-card dashboard-card h-100">
                    <div class="card-body">
                        <h5 class="section-title">Sentiment Analysis</h5>
                        <div class="chart-container" style="height:250px;">
                            <canvas id="social-sentimentChart"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-success rounded-circle me-2" style="width: 12px; height: 12px;">
                                </div>
                                <span class="small">Positive</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-danger rounded-circle me-2" style="width: 12px; height: 12px;"></div>
                                <span class="small">Negative</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="bg-warning rounded-circle me-2" style="width: 12px; height: 12px;">
                                </div>
                                <span class="small">Neutral</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Platform Engagement Bar Chart -->
            <div class="col-lg-5">
                <div class="card social-page-dashboard-card dashboard-card h-100">
                    <div class="card-body">
                        <h5 class="section-title">Platform Engagement</h5>
                        <div class="chart-container" style="height:250px;">
                            <canvas id="platformEngagementChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Key Metrics -->
            <div class="col-lg-4">
                <div class="card social-page-dashboard-card dashboard-card h-100">
                    <div class="card-body">
                        <h5 class="section-title">Key Metrics</h5>
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="metric-card">
                                    <div class="metric-value" id="totalPosts">2.4K</div>
                                    <div class="metric-label">Total Posts</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="metric-card">
                                    <div class="metric-value" id="totalEngagement">15.2K</div>
                                    <div class="metric-label">Engagement</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="metric-card">
                                    <div class="metric-value" id="avgSentiment">72%</div>
                                    <div class="metric-label">Positive Rate</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="metric-card">
                                    <div class="metric-value" id="reachRate">4.8M</div>
                                    <div class="metric-label">Total Reach</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Engagement vs Sentiment Scatter Plot -->
            <div class="col-lg-6">
                <div class="card social-page-dashboard-card dashboard-card">
                    <div class="card-body">
                        <h5 class="section-title">Engagement vs Sentiment Correlation</h5>
                        <div class="chart-container" style="height:300px;">
                            <canvas id="scatterChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Word Cloud Section -->
            <div class="col-lg-6">
                <div class="card social-page-dashboard-card dashboard-card h-100">
                    <div class="card-body">
                        <h5 class="section-title">Trending Keywords</h5>
                        <div class="word-cloud" id="dynamicWordCloud">
                            <span class="word-large">tsunami</span>
                            <span class="word-medium">high</span>
                            <span class="word-medium">waves</span><br>
                            <span class="word-small">Hurricanes</span>
                            <span class="word-medium">Whirlpool</span>
                            <span class="word-small">Typhoons</span><br>
                            <span class="word-medium">flooding</span>
                            <span class="word-medium">coastal</span>
                            <span class="word-medium">damage</span>
                        </div>
                        <div class="mt-3 d-flex flex-wrap gap-2" id="dynamicHashtags">
                            <span class="stats-badge">#TsunamiAlert: 15.2K</span>
                            <span class="stats-badge">#FloodWarning: 8.9K</span>
                            <span class="stats-badge">#CoastalSafety: 6.1K</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hourly Activity Heatmap -->
            <div class="col-lg-8">
                <div class="card social-page-dashboard-card dashboard-card">
                    <div class="card-body">
                        <h5 class="section-title">Hourly Activity Heatmap</h5>
                        <div class="chart-container" style="height:200px;">
                            <canvas id="heatmapChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Influencers -->
            <div class="col-lg-4">
                <div class="card social-page-dashboard-card dashboard-card h-100">
                    <div class="card-body">
                        <h5 class="section-title">Top Influencers</h5>
                        <div class="trending-list" id="dynamicInfluencers">
                            <div class="trending-item">
                                <div class="trending-avatar"></div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium">@WeatherAlert</div>
                                    <div class="text-muted small">24.5K followers • 892 mentions</div>
                                </div>
                            </div>
                            <div class="trending-item">
                                <div class="trending-avatar"></div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium">@EmergencyNews</div>
                                    <div class="text-muted small">18.2K followers • 654 mentions</div>
                                </div>
                            </div>
                            <div class="trending-item">
                                <div class="trending-avatar"></div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium">@DisasterWatch</div>
                                    <div class="text-muted small">15.7K followers • 432 mentions</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trend Timeline -->
            <div class="col-lg-12">
                <div class="card social-page-dashboard-card dashboard-card">
                    <div class="card-body">
                        <h5 class="section-title">Social Media Activity Timeline</h5>
                        <div class="chart-container" style="height:300px;">
                            <canvas id="social-trendChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>