<% layout('layouts/boilerplate') %>


<main class="main-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="form-container">
                    <h2 class="form-title">Post Your Report</h2>

                    <form method="POST" action="/reports" class="needs-validation" novalidate enctype="multipart/form-data">
                        <!-- Title -->
                        <div class="form-group">
                            <label class="form-label">Title</label>
                            <input type="text" name="report[title]" class="form-control" placeholder="Enter Title" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid title.</div>
                        </div>

                        <!-- Category -->
                        <div class="form-group">
                            <label class="form-label" for="category">Category</label>
                            <select class="form-control" name="report[category]" id="category" required>
                                <option value="">-- Select a category --</option>
                                <option value="Tsunami">Tsunami</option>
                                <option value="Hurricanes">Hurricanes</option>
                                <option value="Cyclones">Cyclones</option>
                                <option value="Typhoons">Typhoons</option>
                                <option value="Whirlpool">Whirlpool</option>
                                <option value="Sea-Level-Rise">Sea-Level-Rise</option>
                                <option value="Other">Other</option>
                            </select>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please select a category.</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Upload Image:</label>
                            <input type="file" class="form-control" name="report[image]" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid image.</div>
                        </div>

                        <!-- Description -->
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="report[description]" placeholder="Enter Description" required></textarea>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid description.</div>
                        </div>

                        <!-- Location -->
                        <div class="form-group">
                            <label class="form-label">Location</label>
                            <input type="text" name="report[location]" class="form-control" placeholder="Enter Location" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid location.</div>
                        </div>

                        <!-- State -->
                        <div class="form-group">
                            <label class="form-label">State</label>
                            <input type="text" name="report[state]" class="form-control" placeholder="Enter State" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid state.</div>
                        </div>

                        <!-- Date -->
                        <div class="form-group">
                            <label class="form-label">Date of Incident</label>
                            <input type="date" name="report[date]" class="form-control" required min="2025-09-01" max="2025-09-22">
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please select a valid date.</div>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="acknowledge" required>
                            <label class="form-check-label" for="acknowledge">I know if I send wrong post what happens.</label>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please tick the checkbox.</div>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary-custom">Post</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</main>
