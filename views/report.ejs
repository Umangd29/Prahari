<% layout('layouts/boilerplate') %>


    <!-- Main Content -->
    <div class="container" style="margin-top: 55px; margin-bottom: 10px; ">
        <!-- Back Button -->
        <div class="mb-3">
            <a href="/" class="text-light back-btn text-decoration-none">
                <i class="fas back-i fa-arrow-left"></i> <span>Back home</span>
            </a>
        </div>

        <!-- Movie Hero Section -->
        <div class="movie-hero">
            <div class="row g-0">
                <div class="col-md-4 post-image-div p-4">
                    <img src="<%= report.image.url%>" alt="The Crown" class="movie-poster img-fluid w-100">
                </div>
                <div class="col-md-8 p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="text-end">
                            <span class="text-muted">28 Comments</span>
                            <a href="/reportingpage" class="reporting-icon"><i class="fa-solid fa-triangle-exclamation"></i><span >Report</span></a>
                            <div class="mt-2">
                                <fieldset class="starability-slot">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="Review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="Review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="Review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="Review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="Review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="Review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <p class="mb-2"><strong>@</strong>
                        <%= report.owner.username %> &nbsp; &lt; <%= report.owner.userRole %> &gt;
                    </p>
                    <p class="mb-2"><strong>Title:</strong>
                        <%= report.title %>
                    </p>
                    <p class="mb-1"><strong>Date:</strong>
                        <%= report.date ? report.date.toISOString().slice(0, 10) : '' %>
                    </p>


                    <p class="mb-1"><strong>Location:</strong>
                        <%= report.location %>
                    </p>
                    <p class="mb-1"><strong>State:</strong>
                        <%= report.state %>
                    </p>
                    <p class="mb-1"><strong>Description:</strong>
                        <%= report.description %>
                    </p>
                    <!-- <p class="mb-3"><strong>Network:</strong> Netflix</p> -->

                    <!-- <div class="rating-badge">8.6</div> -->


                    <div class="d-flex flex-wrap">
                        <button class="btn btn-watchlist">
                            <i class="fas fa-heart me-2"></i>Like
                        </button>
                        <button class="btn btn-watchlist">
                            <i class="fas fa-share me-2"></i>Share
                        </button>
                    </div>

                    <% if (currUser && (currUser._id.equals(report.owner._id) || currUser.userRole==='disaster manager'
                        || currUser.userRole==='admin' )) { %>
                        <div class="d-flex flex-wrap">
                            <form method="POST" action="/reports/<%= report._id %>?_method=DELETE">
                                <button class="btn btn-watchlist"><i class="fas fa-trash me-2"></i>Delete</button>
                            </form>
                            <a href="/reports/<%= report._id %>/edit" class="btn btn-watchlist">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>


        <!-- Comments Section -->
        <div class="comments-section">
            <h3 class="mb-4"><i class="fas fa-comments me-2"></i>Comments <span class="text-muted fs-6">28
                    Comments</span></h3>

            <div class="row" id="commentsContainer">
                <div class="col-md-6">
                    <div class="comment-card">
                        <!-- <div class="comment-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
